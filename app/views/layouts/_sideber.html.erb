<% if user_signed_in? %>
  <%= form_with url: searches_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['投稿されたゲーム'], ['ゲーム記事']]) %>
    <%= f.hidden_field :search, value: "partial_match" %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>

