<h1>ゲーム作品一覧</h1>

  <% @game_works.each do |game_work| %>
    <%= link_to game_work_path(game_work) do %>
      <%= image_tag game_work.get_game_work_image(400,200) %>
      <%= game_work.title %>
    <% end %>
    <p><%= link_to "#{game_work.reviews.count} レビュー", reviews_path(game_work_id: game_work.id) %></p>
  <% end %>
  
  <%= paginate @game_works %>