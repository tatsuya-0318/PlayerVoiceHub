<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/sideber' %>
    </div>
    <div class="col-md-9">
      <div class="row m-5">
        <h1>ゲーム作品一覧</h1>
      </div>
      <div class="row">
        <% @game_works.each do |game_work| %>
          <div class="col-12 d-flex flex-column m-2">
            <%= link_to game_work_path(game_work) do %>
              <%= image_tag game_work.get_game_work_image(400,200) %>
              <%= game_work.title %>
            <% end %>
            <p><%= link_to "#{game_work.reviews.count} レビュー", reviews_path(game_work_id: game_work.id) %></p>
          </div>
        <% end %>
      </div>
      <div class="row text-center">
        <%= paginate @game_works %>
      </div>
    </div>
  </div>
</div>