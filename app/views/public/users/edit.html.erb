<div class="container">
  <div class="row justify-content-center mt-4 mb-4">
    <div class="col-6 text-center sign_up-title">
      <h1>プロフィール編集画面</h1>
    </div>
  </div>
    <%= form_with(model: @user, url: update_users_path(@user), method: :patch) do |f| %>
      
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <p>ユーザー名</p>
        </div>
        <div class="col-5 form-group">
          <%= f.text_field :name, class: "form-control"  %>
        </div>
      </div>
      
      <div class="form-row justify-content-center">
        <div class="col-2 form-group">
          <%= f.radio_button :sex, :male %>
          <%= f.label :sex, "男性", value: :male %>
        </div>
        <div class="col-2 form-group">
          <%= f.radio_button :sex, :female %>
          <%= f.label :sex, "女性", value: :female %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <%= f.label :age, '年齢' %>
        </div>
        <div class="col-5 form-group">
          <%= f.text_field :age, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <p>メールアドレス</p>
        </div>
        <div class="col-5 form-group">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <p>画像選択</p>
        </div>
        <div class="col-5 form-group">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
      </div>
      <div class="form-row justify-content-center mt-3 mb-3">
        <div class="col-5 form-group offset-3">
          <%= f.submit '編集内容を保存', class: "btn font-bold", style: "background-color: #38ff9c;" %>
        </div>
      </div>
      <div class="d-flex flex-row-reverse">
        <%= link_to "退会する", users_check_path, class:"btn font-bold", style: "background-color: #0b0b33;" %>
      </div>
    <% end %>
  </div>
</div>