<h1>プロフィール編集画面</h1>

<%= form_with (model: @user, url: update_users_path(@user), method: :patch) do |f| %>
  
  <p>ユーザー名</p>
  <%= f.text_field :name %>
  
  <%= f.radio_button :sex, :male %>
  <%= f.label :sex, "男性", value: :male %>
  
  <%= f.radio_button :sex, :female %>
  <%= f.label :sex, "女性", value: :female %>
  
  <div class="field">
    <%= f.label :年齢 %><br>
    <%= f.text_field :age %>
  </div>
  
  <p>メールアドレス</p>
  <%= f.text_field :email %>
  <%#= display_errors(@user, :email) %>
  
  <p>画像選択</p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  
  <%= f.submit '編集内容を保存' %>
  
  <%= link_to "退会する", users_check_path %>

<% end %>