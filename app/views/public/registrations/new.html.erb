<div class="container">
  <div class="row justify-content-center mt-4 mb-4">
    <div class="col-4 text-center sign_up-title">
      <h2>新規会員登録</h2>
    </div>
  </div>
    <%= form_with model: resource, url: registration_path(resource_name) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      

        <div class="form-row">
          <div class="col-5 form-group ml-5">
              <p>ユーザー名</p>
          </div>
          <div class="col-5 form-group">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-row justify-content-center">
          <div class="col-2 form-group">
            <%= f.radio_button :sex, :male %>
            <%= f.label :sex, "男性", value: :male %>
          </div>
          <div class="col-2 form-group">
            <%= f.radio_button :sex, :female %>
            <%= f.label :sex, "女性", value: :female %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="col-5 form-group ml-5">
            <%= f.label :年齢 %>
          </div>
          <div class="col-5 form-group">
            <%= f.text_field :age, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="col-5 form-group ml-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-5 form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="col-5 form-group ml-5">
            <%= f.label :パスワード（６文字以上） %>
            <% if @minimum_password_length %>
            <% end %>
          </div>
          <div class="col-5 form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="col-5 form-group ml-5">
            <%= f.label :パスワード（確認用） %>
          </div>
          <div class="col-5 form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
      
        <div class="form-row justify-content-center mt-3 mb-3">
          <div class="col-5 form-group offset-3">
            <%= f.submit "新規登録", class: "btn font-bold", style: "background-color: #38ff9c;" %>
          </div>
        </div>
    <% end %>
</div>