<div class="container">
  <div class="row justify-content-center mt-4 mb-4">
    <div class="col-4 text-center log_in-title">
      <h2>会員ログイン</h2>
    </div>
  </div>
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-5 form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-5 form-group ml-5">
          <%= f.label :パスワード（６文字以上） %>
        </div>
        <div class="col-5 form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="form-row justify-content-center mt-3 mb-3">
        <div class="col-5 form-group offset-3">
          <%= f.submit "ログイン", class: "btn font-bold", style: "background-color: #88ff38;" %>
        </div>
      </div>
    <% end %>
</div>