<table>
  <% if @range == "投稿されたゲーム" %>
    <h2>GameWork search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>title</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @game_works.each do |game_work| %>
        <tr>
          <th>
            <%= link_to  game_work_path( game_work.id) do %>
              <%= image_tag game_work.get_game_work_image(50, 50) %>
              <%= game_work.title %>
            <% end %>
          </th>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>introduction</th>
        </tr>
      <tbody>
      <h2>game_articles search for "<%= @word %>"</h2>
      <% @game_articles.each do |game_article| %>
        <tr>
          <td>
            <%= link_to  game_article_path( game_article.id) do %>
              <%= image_tag  game_article.get_game_article_image(50, 50) %>
            <% end %>
          </td>
          <td><%= link_to game_article.title , game_article_path(game_article.id) %></td>
          <td><%= game_article.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>