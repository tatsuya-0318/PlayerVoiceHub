<div class="container">
  <div class="row d-flex flex-column">
    <div class="row d-flex justify-content-center">
      <h1>運営に伝えたいことをこちらに記入してください</h1>
    </div>
    
    <div class="row d-flex justify-content-center">
      <% if @report_inquiry.errors.any? %>
        <ul>
          <% @report_inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  
    <%= form_with model: @report_inquiry, url: report_inquiries_path do |f| %>
      <div class="form-row justify-content-center mt-3 mb-3">
        <div class="col-5 form-group ml-5 mt-5 mb-5">
          <%= f.text_area :content, :size => "40x8" %>
        </div>
        <div class="col-3 form-group offset-3 mr-5">
          <%= f.submit "投稿", class: "btn font-bold", style: "background-color: #38ff9c;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>