<%= @user.name %>さんの会員情報編集

  <%= form_with model: [:admin, @user], url: admin_user_path(@user.id), method: :patch do |f| %>
  
    <div>会員ID</div>
    <div><%= @user.id %></div>
    
    <div>ユーザー名</div>
    <div><%= f.text_field :name %></div>
  
    <%= f.radio_button :sex, :male %>
    <%= f.label :sex, "男性", value: :male %>
    
    <%= f.radio_button :sex, :female %>
    <%= f.label :sex, "女性", value: :female %>

    <div>年齢</div>
    <div><%= f.text_field :age %></div>
  
    <div>メールアドレス</div>
    <div><%= f.text_field :email %></div>

    <div>会員ステータス</div>
    <div>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, "退会" %>

      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, "有効" %>
    </div>
    
    <%= f.submit "変更を保存" %>
    
  <% end %>