  <tr>
    <th>年齢</th>
    <th><%= @user.age %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @user.email %></th>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <th><%= @user.is_deleted %></th>
  </tr>
</table>

