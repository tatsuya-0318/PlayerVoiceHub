<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h3><%= @user.name %>さんの会員詳細</h3>
    
      <table class="user-mypage-table">
        <thead></thead>
        <tbody>
          <tr class="form-row mb-5">
            <th class="col-7 form-group">会員ID</th>
            <th class="col-5 form-group"><%= @user.id %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-5 form-group">ユーザー名</th>
            <th class="col-7 form-group"><%= @user.name %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-7 form-group">プロフィール画像</th>
            <th class="col-7 form-group"><%= image_tag @user.get_profile_image(100,100) %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-4 form-group">性別</th>
            <th class="col-4 form-group"><%= I18n.t("activerecord.attributes.user.sex.#{@user.sex}") %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-4 form-group">年齢</th>
            <th class="col-4 form-group"><%= @user.age %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-7 form-group">メールアドレス</th>
            <th class="col-7 form-group"><%= @user.email %></th>
          </tr>
          <tr class="form-row mb-5">
            <th class="col-7 form-group">会員ステータス</th>
            <th class="col-5 form-group"><%= @user.is_deleted %></th>
          </tr>
        </tbody>
      </table>
      <div class="d-flex flex-row-reverse">
        <%= link_to "編集する", edit_admin_user_path, class:"btn font-bold", style: "background-color: #0b0b33;" %>
      </div>
      <%#= link_to "レビュー履歴を確認する", admin_reviews_path %>
    </div>
    
  </div>
</div>

    