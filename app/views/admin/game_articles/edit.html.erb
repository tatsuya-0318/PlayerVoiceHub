<h1>ゲーム記事編集画面</h1>

<%= form_with model: @game_article, url: admin_game_article_path(@game_article.id), method: :patch, local:true do |f| %>

  <%= f.label "記事名" %>
  <%= f.text_field :title %>
  
  <%= f.label "記事詳細説明" %>
  <%= f.text_area :introduction, :size => "40x8" %>
  
  <%= f.label "記事作品画像" %>
  <%= f.file_field :game_article_image, accept: "image/*" %>
  
  <%= f.submit "変更内容を保存" %>
<% end %>