<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path do |f| %>

  <%= f.label "ジャンル登録" %>
  <%= f.text_field :name %>

  <%= f.submit "新規登録" %>

<% end %>

<table>
  <thead>
    <tr>
      <th>
        ジャンル
      </th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "プラットフォームジャンル一覧・追加", admin_platform_genres_path %>